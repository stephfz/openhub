!!!
%html
  %head
    %title OpenHub
    = stylesheet_link_tag    :application
    = javascript_include_tag :application
    = csrf_meta_tags

  %body{style: "padding-top:60px"}
    %header
      .topbar
        .topbar-inner
          .container-fluid
            %h3
              = link_to "OpenHub", "/"
            %ul.nav
              %li
              - if current_user
                = link_to "Sign Out", signout_path
              - else
                = link_to "Sign it with Twitter", "/auth/twitter"

    %section
      .container-fluid
        = yield
