!!!
%html
  %head
    %title OpenHub
    = stylesheet_link_tag    :application
    = javascript_include_tag :application
    = csrf_meta_tags

  %body{style: "padding-top:60px"}
    %header
      .topbar
        .topbar-inner
          .container-fluid
            %h3
              = link_to "OpenHub", "/"
            .nav_right
              - if current_user
                %img{src: current_user.photo, height: "23px", width: "23px"}
                %span.name 
                  = current_user.name
                = link_to "Sign Out", signout_path
              - else
                = link_to "Sign it with Twitter", "/auth/twitter"

    %section
      .container-fluid
        = yield
